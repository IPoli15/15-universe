#:kivy 2.3.0

<MyRoot>:
    
    BoxLayout:
        orientation: "vertical"

        canvas.before:
            Color:
                rgba: 34/255, 7/255, 82/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            size_hint_y: 0.1
            padding: [10, 10]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.15, 0.07, 0.25, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            TextInput:
                hint_text: "Buscar"
                size_hint_x: 0.7

            Button:
                text: "Login"
                size_hint_x: 0.2
                background_color: 0.5, 0.2, 0.7, 1
                on_press: root.switch_log()
                
            Button:
                text: "Reserva"
                size_hint_x: 0.2
                background_color: 0.5, 0.2, 0.7, 1
                on_press: root.switch_res()

        GridLayout:
            cols: 6
            size_hint_y: 0.15
            spacing: 10
            padding: [10, 10]

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Image:
                    source: "assets/images/cat_futbol.png" 
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: "Fútbol"
                    halign: "center"
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Image:
                    source: 'assets/images/cat_conciertos.png'
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: "Conciertos"
                    halign: "center"
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Image:
                    source: "assets/images/cat_fiestas.png"
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: "Fiestas"
                    halign: "center"
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Image:
                    source: "assets/images/cat_teatro.png"
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: "Teatro"
                    halign: "center"
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Image:
                    source: "assets/images/cat_esport.png"
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: "E-sports"
                    halign: "center"
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: "vertical"
                spacing: 5
                Image:
                    source: "assets/images/stand_up_icon.png"
                    allow_stretch: True
                    keep_ratio: True
                Label:
                    text: "Stand-Up"
                    halign: "center"
                    color: 1, 1, 1, 1


<Reserva>:

    main_title: universe_label

    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/images/Fondo.jpg'
        Label:
            id: universe_label
            text: "Universe"
            font_name:"Montserrat"
            font_size: 50
            color: (95, 100, 43, 19)
      
        GridLayout:
            rows: 4
            cols: 3
            padding: 1
            spacing: 1
            Label:
                
            Label:
                text: 'Consulta tu reserva'
                font_name:"Montserrat"
                font_size: 50
                color: (34, 7, 82, 1)
            Label:
            Label:
                                
            Label:
                text: 'Id de reserva'
                font_size: 40
                size_hint: 0.5, 0.1
            Label:
            Label:

            TextInput:
                id: idreserva
                size_hint: 0.5, 0.1
                font_size: 40
            Label:
            Label:
                
            Button:
                text: 'Revisar'
                font_size: 25
                size_hint: 0.5, 0.1
                on_press: root.change_color()

            Label:
                


        Label:
            text: '-'

        Button:
            text: "Volver"
            font_size: 24
            # size: 100, 50
            size_hint: 0.5, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.switch_root()

<Login>:
    BoxLayout:
        GridLayout:
            rows: 3
            cols: 2
            padding: 1
            spacing: 1
            Label:
                font_size: 40
                text: 'Usuario'
            TextInput:
                font_size: 40
            Label:
                font_size: 40
                text: 'Contraseña'
            TextInput:
                font_size: 40
            Button:
                text: 'Log in'
            Button:
                text: 'Volver a inicio'
                on_press: root.switch_root()



            