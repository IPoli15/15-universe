#:kivy 2.3.0

<RootScreen>:
    MyRoot:

<MyRoot>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/images/Fondo.jpg'

        # Top bar
        BoxLayout:
            size_hint_y: None
            height: "60dp"
            padding: [20, 5]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size

            TextInput:
                hint_text: "Buscar"
                size_hint_x: 0.7
                background_color: 0.2, 0.2, 0.25, 1
                foreground_color: 1, 1, 1, 1
                hint_text_color: 0.5, 0.5, 0.5, 1
                cursor_color: 1, 1, 1, 1
                padding: [10, 10]
                font_size: '16sp'

            Button:
                text: "Login"
                size_hint_x: 0.15
                background_color: 0.3, 0.2, 0.5, 1
                on_press: root.switch_screen('Log')
                
            Button:
                text: "Reserva"
                size_hint_x: 0.15
                background_color: 0.3, 0.2, 0.5, 1
                on_press: root.switch_screen('Res')

        # Categories grid
        GridLayout:
            cols: 3
            padding: [20, 20]
            spacing: 20

            # Futbol
            Button:
                background_color: 0, 0, 0, 0
                on_press: root.access_category('Futbol')
                BoxLayout:
                    orientation: "vertical"
                    pos: self.parent.pos
                    size: self.parent.size
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.2, 0.8
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    padding: 10
                    spacing: 5

                    Image:
                        source: "assets/images/cat_futbol.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.8

                    Label:
                        text: "Fútbol"
                        size_hint_y: 0.2
                        color: 0.8, 0.8, 0.8, 1

            # Conciertos
            Button:
                background_color: 0, 0, 0, 0
                on_press: root.access_category('Conciertos')
                BoxLayout:
                    orientation: "vertical"
                    pos: self.parent.pos
                    size: self.parent.size
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.2, 0.8
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    padding: 10
                    spacing: 5

                    Image:
                        source: "assets/images/cat_conciertos.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.8

                    Label:
                        text: "Conciertos"
                        size_hint_y: 0.2
                        color: 0.8, 0.8, 0.8, 1

            # Fiestas
            Button:
                background_color: 0, 0, 0, 0
                on_press: root.access_category('Fiestas')
                BoxLayout:
                    orientation: "vertical"
                    pos: self.parent.pos
                    size: self.parent.size
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.2, 0.8
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    padding: 10
                    spacing: 5

                    Image:
                        source: "assets/images/cat_fiestas.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.8

                    Label:
                        text: "Fiestas"
                        size_hint_y: 0.2
                        color: 0.8, 0.8, 0.8, 1

            # Teatro
            Button:
                background_color: 0, 0, 0, 0
                on_press: root.access_category('Teatro')
                BoxLayout:
                    orientation: "vertical"
                    pos: self.parent.pos
                    size: self.parent.size
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.2, 0.8
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    padding: 10
                    spacing: 5

                    Image:
                        source: "assets/images/cat_teatro.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.8

                    Label:
                        text: "Teatro"
                        size_hint_y: 0.2
                        color: 0.8, 0.8, 0.8, 1

            # eSports
            Button:
                background_color: 0, 0, 0, 0
                on_press: root.access_category('eSports')
                BoxLayout:
                    orientation: "vertical"
                    pos: self.parent.pos
                    size: self.parent.size
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.2, 0.8
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    padding: 10
                    spacing: 5

                    Image:
                        source: "assets/images/cat_esport.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.8

                    Label:
                        text: "E-sports"
                        size_hint_y: 0.2
                        color: 0.8, 0.8, 0.8, 1

            # Stand-Up
            Button:
                background_color: 0, 0, 0, 0
                on_press: root.access_category('Stand-Up')
                BoxLayout:
                    orientation: "vertical"
                    pos: self.parent.pos
                    size: self.parent.size
                    canvas.before:
                        Color:
                            rgba: 0.15, 0.15, 0.2, 0.8
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [15, 15, 15, 15]
                    padding: 10
                    spacing: 5

                    Image:
                        source: "assets/images/stand_up_icon.png"
                        allow_stretch: True
                        keep_ratio: True
                        size_hint_y: 0.8

                    Label:
                        text: "Stand-Up"
                        size_hint_y: 0.2
                        color: 0.8, 0.8, 0.8, 1

<LoginScreen>:
    Login:

<Login>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0.2, 0.1, 0.5, 0.8 
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/images/Fondo.jpg' 

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: "vertical"
                size_hint: None, None
                size: "400dp", "300dp"
                padding: 20
                spacing: 20

                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.15, 0.9  # Panel más opaco
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                Label:
                    text: "Iniciar sesión"
                    font_name: "Montserrat"
                    font_size: 30
                    size_hint_y: None
                    height: 50
                    color: 1, 1, 1, 1

                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    size_hint_y: None
                    height: "70dp"

                    Label:
                        text: "Usuario:"
                        size_hint_y: None
                        height: "20dp"
                        color: 1, 1, 1, 1
                        halign: 'left'
                        text_size: self.size

                    TextInput:
                        id: username
                        multiline: False
                        size_hint_y: None
                        height: "40dp"
                        background_color: 0.2, 0.2, 0.25, 1
                        foreground_color: 1, 1, 1, 1
                        cursor_color: 1, 1, 1, 1
                        padding: [10, 10]

                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    size_hint_y: None
                    height: "70dp"

                    Label:
                        text: "Contraseña:"
                        size_hint_y: None
                        height: "20dp"
                        color: 1, 1, 1, 1
                        halign: 'left'
                        text_size: self.size

                    TextInput:
                        id: password
                        multiline: False
                        password: True
                        size_hint_y: None
                        height: "40dp"
                        background_color: 0.2, 0.2, 0.25, 1
                        foreground_color: 1, 1, 1, 1
                        cursor_color: 1, 1, 1, 1
                        padding: [10, 10]

                Button:
                    text: "Iniciar sesión"
                    size_hint_y: None
                    height: "40dp"
                    background_color: 0.3, 0.2, 0.8, 1
                    color: 1, 1, 1, 1
                    on_press: root.send_login(username.text, password.text)

                Button:
                    text: "Regresar"
                    size_hint_y: None
                    height: "40dp"
                    background_color: 0.5, 0.5, 0.5, 1
                    color: 1, 1, 1, 1
                    on_press: root.switch_root()

<ReservaScreen>:
    Reserva:

<Reserva>:
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: 0.2, 0.1, 0.5, 0.8  # Fondo púrpura semi-transparente
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'assets/images/Fondo.jpg'  # Mantén la imagen de fondo

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: "vertical"
                size_hint: None, None
                size: "400dp", "300dp"
                padding: 20
                spacing: 20

                canvas.before:
                    Color:
                        rgba: 0.1, 0.1, 0.15, 0.9  # Panel más opaco
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [15]

                Label:
                    text: "Consulta tu reserva"
                    font_name: "Montserrat"
                    font_size: 30
                    size_hint_y: None
                    height: 50
                    color: 1, 1, 1, 1

                BoxLayout:
                    orientation: "vertical"
                    spacing: 5
                    size_hint_y: None
                    height: "70dp"

                    Label:
                        text: "ID de reserva:"
                        size_hint_y: None
                        height: "20dp"
                        color: 1, 1, 1, 1
                        halign: 'left'
                        text_size: self.size

                    TextInput:
                        id: idreserva
                        multiline: False
                        size_hint_y: None
                        height: "40dp"
                        background_color: 0.2, 0.2, 0.25, 1
                        foreground_color: 1, 1, 1, 1
                        cursor_color: 1, 1, 1, 1
                        padding: [10, 10]

                Button:
                    text: "Revisar"
                    size_hint_y: None
                    height: "40dp"
                    background_color: 0.3, 0.2, 0.8, 1
                    color: 1, 1, 1, 1
                    on_press: root.parent.check_reservation(idreserva.text)

                Button:
                    text: "Regresar"
                    size_hint_y: None
                    height: "40dp"
                    background_color: 0.5, 0.5, 0.5, 1
                    color: 1, 1, 1, 1
                    on_press: root.switch_root()

